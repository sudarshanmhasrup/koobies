<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme for API level 33 and above -->
    <style name="Theme.AppStarting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.ComposeApp</item>
        <item name="android:windowSplashScreenBehavior">icon_preferred</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>